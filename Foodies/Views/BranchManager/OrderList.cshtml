@model IEnumerable<Foodies.Models.Order>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order List</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
       <link rel="stylesheet" href="~/css/Navbar.css" asp-append-version="true"/>
       <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Foodies.styles.css" asp-append-version="true" />


    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>

    <!-- Navbar with Profile Button -->
     <ul class="navbar-nav">
         

    <div class="navbar">
        <div>
            <img src="/images/logo.png" alt="Foodies Logo" class="logo"> 
        </div>
        <div class="nav-links">
            <!-- Navigation Links -->
                <a href="~/BranchManager/OrderList?branchId=@ViewBag.b">Orders</a> <!-- Use user ID in links if needed -->
            <a href="~/BranchManager/Profile/">Profile</a>
            <a href="~/Master/Logout">Logout</a>
        </div>
    </div>
</ul>

    <!-- Main Content -->
    <div class="container">
        <div class="main-content">
            <div class="order-header">
                <h1>Order List</h1>
            </div>

            <div class="order-list">
                @if (Model != null && Model.Any())
                {
                    @foreach (var order in Model)
                    {
                        <div class="order-item">
                            <img src="~/images/logo.png" alt="Order Icon" class="order-icon" style="width: 500px; height: auto">
                            <div class="order-details">
                                <h4>Order ID: @order.Id</h4>
                                <p>Date: @order.OrderDate.ToString("MM/dd/yyyy")</p>
                                <p>Total: @order.TotalPrice.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-EG"))</p>
                                <p>Status: @order.State</p>
                            </div>
                            <div class="order-actions">
                                <button class="view-details-btn" onclick="location.href='/BranchManager/Details/@order.Id'">View Details</button>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p>No orders available.</p>
                }
            </div>
        </div>
    </div>

    <!-- CSS -->
    <style>
        
        /* Container to hold buttons */
        .button-container {
            display: flex;
            align-items: center; /* Vertically aligns items */
        }

        /* Order button styling */
        .order-btn, .profile-btn {
            background-color: var(--primary-color);
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            margin-left: 10px; /* Add space between buttons */
        }

            /* Hover effect for both buttons */
            .profile-btn:hover,
            .order-btn:hover {
                background-color: var(--primary-color);
            }

        

        .container {
            display: flex;
            flex-direction: column;
            height: 100vh;
            padding: 20px;
        }

        .main-content {
            margin-top: 60px;
        }

        .order-header h1 {
            font-size: 28px;
            color: #333;
        }

        .order-header p {
            color: #666;
        }

        .order-list {
            margin-top: 20px;
        }

        .order-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px;
            background-color: #fff;
            border-radius: 10px;
            margin-bottom: 15px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .order-item:hover {
                transform: translateY(-5px);
                box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.2);
            }

        .order-icon {
            width: 80px;
            height: 80px;
        }

        .order-details h4 {
            margin: 0;
            font-size: 18px;
        }

        .order-details p {
            margin: 5px 0;
            color: var(--primary-color);
        }

        .view-details-btn {
            background-color: var(--primary-color);
            color: white;
            padding: 8px 12px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            .view-details-btn:hover {
                background-color: var(--primary-color);
                transform: translateY(-2px);
            }

        html, body {
            background-color: silver;
        }
    </style>

</body>
</html>
