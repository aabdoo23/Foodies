 <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />   *@
    @* <link rel="stylesheet" href="~/css/Main.css" asp-append-version="true">   *@

    <title>Sign Up - Foodies</title>
</head>
<body>


    <!-- Sign Up Content -->
    <div class="content">
        <div class="signup-form">
            @if (ViewBag.NotificationMessage != null)
            {
                                <div class="alert @(ViewBag.NotificationType == "success" ? "alert-success" : "alert-danger")">
                    @ViewBag.NotificationMessage
                                </div>
            }
            <h1>Sign Up</h1>
            <p>Create an account to order your favorite food</p>

<form method = "post" asp-action="SaveNewCustomer" asp-controller="Master" enctype="multipart/form-data">
                <div class="input-group">
                    <label>First Name</label>
                    <input type="text"  name="FirstName"  required>
                </div>

                <div class="input-group">
                    <label>Last Name</label>
                    <input type="text" name="LastName" required>
                </div>

                  <div class="input-group">
                    <label>Email</label>
                    <input type="email" name="Email" required>
                </div>


             <div class="input-group">
                    <label>phone Number</label>
                    <input type="text" name="phoneNumber" required>
                </div>


                <div class="input-group">
                    <label>Password</label>
                    <input type="Password" name="Password" required>
                </div>

            <div class="input-group">
                    <label>Confirm Password</label>
                    <input type="Password" name="ConfirmPassword" required>
                </div>

                 <div class="input-group">
                    <label>City</label>
                    <input type="text" name="City" required>
                </div>

                @* <label for="file">Image</label> *@
                    @* <input type="file"  name="immg" accept="image/*"> *@



                <button type="submit" class="btn">Create Account</button>
            </form>
            <div class="redirect-login">
                <p>Already have an account? <a href="/Master/Login"><button class="text-button">Login here</button></a>
            </div>
        </div>
    </div>

</body>
</html>



<style>
/* Basic Styles */




    .content {
        display: flex;
        justify-content: flex-start;
        align-items: center;
        flex-direction: column;
        display: flex;
        height: 100vh; /* Full viewport height */
        /* text-align: center; */
        padding-top: 30px;
        padding-bottom: 150px;
        width: 100%;
    }

.signup-form {
    margin-top: 50px;
    background-color: white;
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    max-width: 400px;
    width: 100%;
}

.signup-form h1 {
    font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
    color: #D35269;
    margin-bottom: 20px;
    text-align: center;
}

.signup-form p {
    margin-bottom: 30px;
    font-family: Inter, apple-system, BlinkMacSystemFont, "Helvetica Neue", "Segoe UI", "Fira Sans", Roboto, Oxygen, Ubuntu, "Droid Sans", Arial, sans-serif;
    color: black;
    font-size: 16px;
}

.signup-form form {
    display: flex;
    flex-direction: column;
}

.input-group {
    margin-bottom: 15px;
}

.input-group label {
    margin-bottom: 5px;
    font-weight: bold;
    color: #333;
}

.input-group input {
    padding: 10px;
    font-size: 16px;
    border: 1px solid #ccc;
    border-radius: 4px;
    width: 100%;
}

.signup-form .btn {
    background-color: #048a81;
    color: white;
    border: none;
    padding: 15px;
    font-size: 18px;
    cursor: pointer;
    border-radius: 14px;
    font-family: Inter, apple-system, BlinkMacSystemFont, "Helvetica Neue", "Segoe UI", "Fira Sans", Roboto, Oxygen, Ubuntu, "Droid Sans", Arial, sans-serif;
    font-weight: bold;
}

.signup-form .btn:hover {
    background-color: #2EBFA5;
    color: #b0374d;
    font-weight: bold;


    .text-button:hover;
    text-decoration: none;
}

.redirect-login {
    margin-top: 20px;
    font-size: 14px;
}

.redirect-login button {
    color: #D35269;
    text-decoration: none;
}

.redirect-login button:hover {
    text-decoration: underline;
}
 .alert {
    padding: 15px;
    margin-bottom: 20px;
    border: 1px solid transparent;
    border-radius: 4px;
    width: 100%;
    max-width: 400px;
    text-align: center;
}
.alert-success {
    color: #155724;
    background-color: #d4edda;
    border-color: #c3e6cb;
}

.alert-danger {
    color: #721c24;
    background-color: #f8d7da;
    border-color: #f5c6cb;
}


</style>

 <script>
    setTimeout(function () {
        var alert = document.querySelector('.alert');
        if (alert) {
            alert.style.display = 'none';
        }
    }, 5000); 
</script>