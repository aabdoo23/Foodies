    <title>Sign Up - Foodies</title>
</head>
<body>

    <!-- Sign Up Content -->
    <div class="content">
        @if (ViewBag.NotificationMessage != null)
        {
                                <div class="alert @(ViewBag.NotificationType == "success" ? "alert-success" : "alert-danger")">
                @ViewBag.NotificationMessage
                                </div>
        }
        <div class="signup-form">
            <h1>Sign Up</h1>
            <p>Register to manage your restaurant and connect with customers.</p>

                <form method="post" asp-action="SaveAdminAndResturant" asp-controller="Master" enctype="multipart/form-data">
                <div class="form-row">
                    <div class="input-group">
                        <label for="FirstName">First Name</label>
                        <input type="text"  name="FirstName" required>
                    </div>

                    <div class="input-group">
                        <label for="LastName">Last Name</label>
                        <input type="text" name="LastName" required>
                    </div>
                </div>

                <div class="form-row">
                    <div class="input-group">
                        <label for="Email">Email</label>
                        <input type="email" name="Email" required>
                    </div>

                     <div class="input-group">
                        <label for="AdminNumber">Phone Number</label>
                        <input type="tel" name="PhoneNumber" required pattern="[0-9]{11}" placeholder="Enter 11-digit number">
                    </div>
                </div>


                     <div class="form-row">
                    <div class="input-group">
                        <label for="AdminPassword">Password</label>
                        <input type="password" name="Password" required>
                    </div>
                    <div class="input-group">
                        <label for="AdminPassword">Confirm Password</label>
                        <input type="password" name="ConfirmPassword" required>
                    </div>

                    <div class="input-group">
                        <label for="restaurant-name">Restaurant Name</label>
                        <input type="text" name="Name" required>
                    </div>
                </div>

                <div class="form-row">
                    <div class="input-group">
                        <label for="hotline">Hotline</label>
                        <input type="tel" name="Hotline" required>
                    </div>

                     <div class="input-group">
                        <label for="min-price">Minimum Price</label>
                        <input type="number"  name="MinPrice" value="0">
                    </div> 


                <div class="form-row">
                    <div class="input-group">
                        <label for="max-price">Maximum Price</label>
                        <input type="number" name="MaxPrice" required>
                    </div> 
                    <div class="input-group">
                        <label for="cusine-type">Cuisine Type</label>
                        <select  class="input-group" name="CuisineType">
                       <option value="" disabled selected>Select cuisine type</option>
                       <option value="burger">Burger</option>
  <option value="pizza">Pizza</option>
  <option value="desserts">Desserts</option>
  <option value="drinks">Drinks</option>
  <option value="salads">Salads</option>
  <option value="seafood">Seafood</option>
  <option value="chicken">Chicken</option>
  <option value="beef">Beef</option>
  <option value="vegan">Vegan</option>
  <option value="sushi">Sushi</option>
  <option value="pasta">Pasta</option>
  <option value="chinese">Chinese</option>
  <option value="indian">Indian</option>
</select>

                    </div>
                </div>

                </div>

                 <div class="form-row">
                    <div class="input-group">

                        <label for="file">Upload Restaurant Image:</label>
                        <input type="file"  name="immg" accept="image/*" required>
                        <br><br>


                    </div>



                  </div>

                        <button type="submit" class="btn">Create Account</button>
</form>
            <div class="redirect-login">
                <p>Already have an account? <a href="@Url.Action("Login", "Master")">Login here</a></p>

            </div>
        </div>
    </div>

</body>
</html>
<style>
.content {
    justify-content: center;
    align-items: center;
    text-align: center;
    margin-top: 90px;
}

.signup-form {
    background-color: white;
    padding: 10px 40px;
    border-radius: 17px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    max-width: 800px;
    width: 100%;
    margin: 0 auto; /* To ensure the form itself is centered */
}

