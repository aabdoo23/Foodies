
<link rel="stylesheet" href="~/css/form.css" asp-append-version="true"/>
<link rel="stylesheet" href="~/css/Main.css" asp-append-version="true"/>

@model MenuItem
<br /> <br /> <br /> <br /> <br />
<form asp-action="SaveEdit" method="post">
    <input type="hidden" name="restaurantId" value="@Model.Resturant" />
    <input type="hidden" name="Id" value="@Model.Id" />
    <div>
        <label for="Name">Enter Name</label>
        <input type="text" name="Name" value="@Model.Name"  class="form-control" required />

        <label for="Price">Enter Price</label>
        <input type="number" name="Price" value="@Model.Price" class="form-control" required />

        <label for="Category">Enter Category</label>
        <input type="text" name="Category" value="@Model.Category" class="form-control" required />

        <label for="Description">Enter Description</label>
        <input type="text" name="Description" value="@Model.Description" class="form-control" required />
    </div>

    <br />
    <input type="submit" value="Add" class="btn" />
</form>
