<body>
 

  <section class="checkout-section">
    <div class="left-section">
        <div class="delivery-options">
            <label class="radio-label">
                <input type="radio" name="delivery" value="delivery" id="delivery-option" checked> Delivery
            </label>
            <label class="radio-label">
                <input type="radio" name="delivery" value="pickup" id="pickup-option"> Pick up from restaurant
            </label>
        </div>

        <div class="map-container">

            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3456.192364094608!2d30.939254082238524!3d29.973901210393183!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x145857502afd5499%3A0x4beb6b963d88d58!2sBazooka%20fried%20chicken!5e0!3m2!1sen!2seg!4v1726173538604!5m2!1sen!2seg" width="300" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>

        <div class="address-section">
            <p>Your Address    <p class="shoytmrg">6th of October - 4th District</p>      <a href="#" class="change-link">Change</a>     </p>

        </div>

        <div class="delivery-info">
            <i class="fa-solid fa-car"></i>
            <p>Arriving in approx. <strong> mins</strong></p>
        </div>
    </div>

    <div class="right-section">
        <div class="points">
            <label>Your total points: <input type="text" id="points" value="470" readonly></label>
        </div>

        <div class="payment-section">
            <p class="section-title">Payment Options</p>
            <label class="radio-label"><input type="radio" name="payment"> Card</label>
            <label class="radio-label"><input type="radio" name="payment"> Cash</label>
            <div>
                <label><input type="checkbox" id="use-points"> Use Your Points</label>
            </div>
        </div>

        <div class="order-summary">
            <p>Sub Total: <span class="price" id="subtotal">@ViewBag.Total EGP</span></p>
            <p>Discount: <span class="price" id="discount">0 EGP</span></p>
            <p>Delivery: <span class="price" id="delivery">0 EGP</span></p>

            <p class="total-amount">Total: <span class="price" id="total"> 444.00 EGP</span></p>
        </div>

        <button class="confirm-btn">Confirm Order</button>
    </div>
  </section>
</body>
</html>
