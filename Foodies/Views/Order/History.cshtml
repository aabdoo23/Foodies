@model List<Order>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/History.css" />

    <title>Order History</title>
  
</head>

<body>
    <div class="header">
        <div class="logo">
            <img src="/assets/images/order_history/foodies_logo.png" alt="Foodies Logo">
            <h2>Foodies</h2>
        </div>
        <div class="user-info">
            <img src="/assets/images/order_history/user.png" alt="User Avatar">
            <span>Me ▼</span>
            <div class="cart">
                <img src="/assets/images/order_history/cart_icon.png" alt="Cart">
                <span>(0)</span>
            </div>
        </div>
    </div>
    <div class="main">
        <h1>Order History</h1>

        <!-- Order Card 1 -->
        
        @if (Model != null && Model.Any())
        {
            @foreach (var order in Model)
            {
            <div class="order-card">
                    <img src="/assets/images/orders/order_placeholder.png" alt="Order Icon" class="order-icon">
                    <div class="order-details">
                        <p>Date: @order.OrderDate.ToString("MM/dd/yyyy")</p>
                        <p>Total: @order.TotalPrice.ToString("C")</p>
                        <p>Status: @order.State</p>
                    </div>
                    <div class="order-actions">
                    <div class="order-image">
                        <img src="/assets/images/order_history/pizza.png" alt="Pizza">
                    </div>
                      <button class="reorder-button" onclick="location.href='/order/checkout/@order.TotalPrice'">Reorder</button>
                    </div>
                </div>
            }
        }
        else
        {
           <p>No orders available.</p>
        }
       

        <!-- Pagination -->
        <div class="pagination">
            <a href="#">Previous</a>
            <a href="#">1</a>
            <a href="#">2</a>
            <a href="#">3</a>
            <a href="#">Next</a>
        </div>
    </div>

</body>

</html>
