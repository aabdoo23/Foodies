@using Foodies.ViewModels.Components
@model ButtonViewModel

<button class="btn-github-sc" onclick="window.location.href='@Model.Url'">
    <i class="fas fa-@Model.Icon"></i>
    <span>@Model.Text</span>
</button>

<style>
    .btn-github-sc {
        margin-right: 10px;
        cursor: pointer;
        display: inline-block;
        gap: 0.5rem;
        border: none;
        width: auto;
        transition: all 0.5s cubic-bezier(0.165, 0.84, 0.44, 1);
        border-radius: 15px;
        font-weight: 700;
        place-content: center;

        padding: 0.75rem 1rem;
        font-size: 0.825rem;
        line-height: 1rem;

        box-shadow:
            inset 0 1px 0 0 rgba(255, 255, 255, 0.04),
            inset 0 0 0 1px rgba(255, 255, 255, 0.04);
        color: #fff;
        background-color: var(--secondary-color);
    }
    .btn-github-sc:hover {
        box-shadow:
            inset 0 1px 0 0 rgba(255, 255, 255, 0.08),
            inset 0 0 0 1px rgba(252, 232, 3, 0.08);
        color: var(--black);
        transform: translate(0, -0.25rem);
        background-color: var(--white);
    }
</style>